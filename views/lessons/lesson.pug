//- tasks is an array . list the name is an anchor
//- lesson {} - name  description

extends ../layout

block content
  
  div.container
    p.lessonTitle Lesson name: #{lesson.name}
    p.lessonTitle Lesson Description: #{lesson.description}
  div.container
    .list-group.lessonTitle Tasks:
      each task in tasks
        a.list-group-item(href=`${lesson.id}/task/${task.id}`)= task.name
