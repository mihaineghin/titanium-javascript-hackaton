extends ../../layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Add lesson

        // adding lesson
        form(method='POST' action='/admin')
            div.form-group
            input(type="hidden" name="_csrf" value=_csrf)
            div.form-group
                label(for='name') Lesson Name:
                input#name.form-control(type='text', placeholder='Lesson Name' name="lesson_name")
            div.form-group
                label(for='name') Lesson Description:
                textarea#name.form-control(placeholder='Lesson Description' name="lesson_description")
            
            button.btn.btn-primary(type='submit') Add Lesson

